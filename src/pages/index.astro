---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL.endsWith('/')
	? import.meta.env.BASE_URL
	: import.meta.env.BASE_URL + '/';

const projects = await getCollection('projects');

const sorted = [...projects].sort((a, b) => {
	if (b.data.year !== a.data.year) return b.data.year - a.data.year;
	return a.data.title.localeCompare(b.data.title);
});
---

<BaseLayout title="Aaron Cannon | Portfolio">
	<!-- Hero -->
	<section class="border-b border-zinc-800/60">
		<div class="mx-auto max-w-6xl px-4 py-16">
			<p class="text-sm uppercase tracking-widest text-zinc-400">Portfolio</p>
			<h1 class="mt-3 text-4xl font-semibold tracking-tight sm:text-5xl">
				Aaron Cannon
			</h1>
			<p class="mt-4 max-w-2xl text-lg text-zinc-300">
				Computer Games Design Student
			</p>

			<div class="mt-8 flex flex-wrap gap-3">
				<a
					href="#projects"
					class="rounded-md bg-zinc-100 px-4 py-2 text-sm font-medium text-zinc-950 hover:bg-white"
				>
					View Projects
				</a>
				<a
					href={`${base}cv`}
					class="rounded-md border border-zinc-700 bg-zinc-900/30 px-4 py-2 text-sm font-medium text-zinc-100 hover:bg-zinc-900"
				>
					View CV
				</a>
			</div>
		</div>
	</section>

	<!-- Projects -->
	<section id="projects" class="border-b border-zinc-800/60">
		<div class="mx-auto max-w-6xl px-4 py-16">
			<h2 class="text-2xl font-semibold tracking-tight">Projects</h2>

			<div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
				{
					sorted.map((p) => (
						<article class="group overflow-hidden rounded-xl border border-zinc-800 bg-zinc-900/20 hover:bg-zinc-900/35">
							<div class="aspect-16/10 overflow-hidden border-b border-zinc-800">
								<img
									src={`${base}${p.data.coverImage.replace(/^\/+/, '')}`}
									alt={`Screenshot from ${p.data.title}`}
									class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-[1.03]"
								/>
							</div>

							<div class="p-5">
								<div class="flex items-start justify-between gap-3">
									<h3 class="text-lg font-semibold leading-snug">
										{p.data.title}
									</h3>
									<span class="shrink-0 rounded-md border border-zinc-700 bg-zinc-950/30 px-2 py-1 text-xs text-zinc-300">
										{p.data.year}
									</span>
								</div>

								<dl class="mt-4 grid grid-cols-2 gap-x-4 gap-y-3 text-sm">
									<div>
										<>
											<dt class="text-zinc-400">Engine</dt>
											<dd class="text-zinc-200">{p.data.engine}</dd>
										</>
									</div>
									<div>
										<>
											<dt class="text-zinc-400">Team</dt>
											<dd class="text-zinc-200">{p.data.team}</dd>
										</>
									</div>
									<div>
										<>
											<dt class="text-zinc-400">Type</dt>
											<dd class="text-zinc-200">{p.data.type}</dd>
										</>
									</div>
									<div class="col-span-2">
										<>
											<dt class="text-zinc-400">Role</dt>
											<dd class="text-zinc-200">{p.data.role}</dd>
										</>
									</div>
								</dl>

								<p class="mt-4 text-sm text-zinc-300">{p.data.summary}</p>

								<div class="mt-6">
									<a
										class="inline-flex items-center gap-2 rounded-md border border-zinc-700 bg-zinc-950/30 px-3 py-2 text-sm font-medium hover:bg-zinc-950/60"
										href={`${base}projects/${p.slug}`}
									>
										Read More <span aria-hidden="true">→</span>
									</a>
								</div>
							</div>
						</article>
					))
				}
			</div>
		</div>
	</section>

	<!-- About -->
	<section id="about" class="border-b border-zinc-800/60">
		<div class="mx-auto max-w-6xl px-4 py-16">
			<h2 class="text-2xl font-semibold tracking-tight">About Me</h2>
			<div class="mt-4 max-w-3xl space-y-4 text-zinc-300">
				<p>
					I'm a Computer Games Design student studying at ARU Chelmsford. I
					specialise primarily in Gameplay and Mechanics with some experience in
					Narrative design.
				</p>
				<p>
					I also have interests in Economy and UX/UI Design. Outside of Games
					Design, I have interest and prior experience in programming in Python,
					JavaScript and C#. I have also experimented with creating 3D models in
					Blender.
				</p>
			</div>

			<div class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
				<div class="rounded-xl border border-zinc-800 bg-zinc-900/20 p-5">
					<h3 class="font-semibold">Strengths</h3>
					<ul class="mt-3 space-y-2 text-sm text-zinc-300">
						<li class="flex gap-2">
							<span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-500"
							></span><span>Strong problem-solving skills</span>
						</li>
						<li class="flex gap-2">
							<span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-500"
							></span><span
								>Can work well independently and in team settings</span
							>
						</li>
						<li class="flex gap-2">
							<span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-500"
							></span><span>Player-focused game design</span>
						</li>
						<li class="flex gap-2">
							<span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-500"
							></span><span>UX/UI readability</span>
						</li>
						<li class="flex gap-2">
							<span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-500"
							></span>Designing with long-term player behaviour and learning
							curves in mind<span></span>
						</li>
						<li class="flex gap-2">
							<span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-500"
							></span><span
								>Readable level layouts that teach mechanics naturally</span
							>
						</li>
					</ul>
				</div>

				<div class="rounded-xl border border-zinc-800 bg-zinc-900/20 p-5">
					<h3 class="font-semibold">Skills</h3>
					<ul class="mt-3 space-y-2 text-sm text-zinc-300">
						<li class="flex gap-2">
							<span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-500"
							></span><span>Unreal Engine (Blueprints)</span>
						</li>
						<li class="flex gap-2">
							<span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-500"
							></span><span>Unity (Visual Scripting + C#)</span>
						</li>
						<li class="flex gap-2">
							<span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-500"
							></span><span
								>Use of industry standard planning tools (Miro + Trello)</span
							>
						</li>
						<li class="flex gap-2">
							<span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-500"
							></span><span>Git & Github</span>
						</li>
						<li class="flex gap-2">
							<span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-500"
							></span><span>BitBucket</span>
						</li>
					</ul>
				</div>

				<div class="rounded-xl border border-zinc-800 bg-zinc-900/20 p-5">
					<h3 class="font-semibold">Other Interests</h3>
					<ul class="mt-3 space-y-2 text-sm text-zinc-300">
						<li class="flex gap-2">
							<span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-500"
							></span><span>Dungeons & Dragons (DM and Player)</span>
						</li>
						<li class="flex gap-2">
							<span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-500"
							></span><span>Warhammer 40K</span>
						</li>
						<li class="flex gap-2">
							<span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-500"
							></span><span>Pokémon Cards</span>
						</li>
						<li class="flex gap-2">
							<span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-500"
							></span><span
								>Playing new games of different genres I don't frequently play</span
							>
						</li>
						<li class="flex gap-2">
							<span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-500"
							></span><span>Roguelike/Roguelite games</span>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</section>

	<!-- Contact -->
	<section id="contact">
		<div class="mx-auto max-w-6xl px-4 py-16">
			<h2 class="text-2xl font-semibold tracking-tight">Contact</h2>
			<p class="mt-2 text-zinc-300">
				You can contact me using the details below.
			</p>

			<div class="mt-8 grid gap-4 sm:grid-cols-2">
				<div class="rounded-xl border border-zinc-800 bg-zinc-900/20 p-5">
					<p class="text-sm text-zinc-400">Email</p>
					<a
						class="mt-1 inline-block font-medium hover:underline"
						href="mailto:aaroncannon151@hotmail.com"
					>
						aaroncannon151@hotmail.com
					</a>
				</div>

				<div class="rounded-xl border border-zinc-800 bg-zinc-900/20 p-5">
					<p class="text-sm text-zinc-400">Phone</p>
					<a
						class="mt-1 inline-block font-medium hover:underline"
						href="tel:+4407305731452"
					>
						+44 07305 731452
					</a>
				</div>
			</div>
		</div>
	</section>
</BaseLayout>
